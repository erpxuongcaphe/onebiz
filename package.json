{
  "name": "onebiz",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:erp": "turbo run dev --filter=erp",
    "dev:pos": "turbo run dev --filter=pos",
    "build": "turbo run build",
    "build:erp": "turbo run build --filter=erp",
    "build:pos": "turbo run build --filter=pos",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rimraf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.7.3",
    "rimraf": "^5.0.0"
  },
  "packageManager": "npm@10.2.0"
}